<?xml version="1.0"?>
<config>
    <sections>
        <wisepopsconnect translate="label" module="wisepopsconnect">
            <label>Wisepops Connect</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Wisepops Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <status translate="label,comment">
                            <label>Activate WisePops</label>
                            <comment><![CDATA[Activate WisePops module so you can start displaying your WisePops.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </status>
                        <wisepops_id translate="label,comment">
                            <label>Account number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <validate>validate-wisepops-id</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </wisepops_id>
                        <register_link>
                           <frontend_type>button</frontend_type>
                           <frontend_model>wisepopsconnect/system_configuration_frontend_button_notRegistered</frontend_model>
                           <sort_order>10</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                        </register_link>
                        <already_registered_link>
                           <frontend_type>button</frontend_type>
                           <frontend_model>wisepopsconnect/system_configuration_frontend_button_alreadyRegistered</frontend_model>
                           <sort_order>20</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                        </already_registered_link>
                    </fields>
                </settings>
            </groups>
        </wisepopsconnect>
    </sections>
</config>
